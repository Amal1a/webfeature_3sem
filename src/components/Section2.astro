<style>

  /* General CSS for all*/
  .card-image {
    max-width: 100%;
    height: auto;
    border-radius: 15px;
  }

  .textbox1,
  .textbox2 {
    background-color: lightblue;
    padding: 20px;
    text-align: center;
    display: grid;
    align-items: center;
    justify-items: center;
    border: 3px solid darkgray;
  }

  .center-text-block {
    display: inline-block;
    text-align: left;
  }



  /* Container to hold 5-grid system. This is first row*/
  .container {
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 10px;
    width: 100%;
  }

  .two-fifth {
    background-color: lightgray;
    border-radius: 40px 40px 0 40px; /* Rounded top-left, top-right, square bottom-right, rounded bottom-left */
    padding: 20px;
    text-align: center;
  }

  /* Container to hold 5-grid system. This is Second row*/
  .container2 {
    display: grid;
    grid-template-columns: 2fr 1fr 2fr;
    gap: 10px;
    width: 100%;
  }

  .two-fifth2 {
    background-color: lightgray;
    border-radius: 40px 0 0 40px; /* Rounded top-left, top-right, square bottom-right, rounded bottom-left */
    padding: 20px;
    text-align: center;
  }

  .textbox2 {
    border: none;
  }

  .two-fifth3 {
    background-color: lightgray;
    border-radius: 0 40px 80px 0; /* Rounded top-left, top-right, square bottom-right, rounded bottom-left */
    padding: 20px;
    text-align: center;
  }


  /* Container to hold 5-grid system. This is Third row*/
  .container3 {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 10px;
    width: 100%;
  }

  .textbox2 {
    border-top: none;
    border-bottom: 3px solid darkgray;
    border-left: 3px solid darkgray;
    border-right: 3px solid darkgray;
  }

  .two-fifth4 {
    background-color: lightgray;
    border-radius: 0 20px 20px 70px; /* Rounded top-left, top-right, square bottom-right, rounded bottom-left */
    padding: 20px;
    text-align: center;
  }

</style>
