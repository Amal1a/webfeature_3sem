<div class="container2">
  <div class="two-fifth2">
    <img
      src="https://via.placeholder.com/250"
      alt="Placeholder Image"
      class="card-image"
    />
  </div>

  <!-- 3/5 Grid Section -->
  <div class="textbox2">
    <div class="center-text-block">
      <h2>Three-fifth Section (3/5)</h2>
      <p>This section takes up 3/5 of the container.</p>
    </div>
  </div>

  <!-- 2/5 Grid Section -->
  <div class="two-fifth3">
    <img
      src="https://via.placeholder.com/250"
      alt="Placeholder Image"
      class="card-image"
